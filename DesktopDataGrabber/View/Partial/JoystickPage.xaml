<Page x:Class="DesktopDataGrabber.View.Partial.JoystickPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopDataGrabber.View.Partial"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JoystickPage"
      >
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Rectangle Width="50" Height="50" Fill="{Binding boxUp}" Margin="0 0 0 10"/>
        <StackPanel Orientation="Horizontal">
            <Rectangle Width="50" Height="50" Margin="0 0 10 0" Fill="{Binding boxLeft}"/>
            <Rectangle Width="50" Height="50" Margin="0 0 10 0" Fill="{Binding boxCenter}"/>
            <Rectangle Width="50" Height="50" Fill="{Binding boxRight}"/>
        </StackPanel>
        <Rectangle Width="50" Height="50" Margin="0 10 0 0" Fill="{Binding boxDown}"/>
    </StackPanel>
</Page>
